
@{

}

@model  IEnumerable<WebApplicationWZH.Models.ControllerArry>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>ControllerName</th>
                <th>ActionItem</th>

            </tr>
        </thead>
        <tbody>
            @{ int nn = 1; }
            @foreach (var v in Model)
            {
                var list = v.controllerItem;
                <tr>
                    <td>@nn</td>
                    <td>@v.controlleName</td>
                    <td>
                        @foreach (var t in list)
                        {
                            string txt = t.ActionName + "【" + t.ActionType + "】  ";
                            <input type="checkbox">@txt  
                        }
                        <button class="btn-sm btn-primary">全选</button>
                    </td>
                </tr>
                nn++;
            }
        </tbody>
    </table>
    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>ControllerName</th>
                <th>ActionItem</th>

            </tr>
        </thead>
        <tbody>
            @{ int n = 1; }
            @foreach (var v in Model)
            {
                var list = v.controllerItem;
                <tr>
                    <td>@n</td>
                    <td>@v.controlleName</td>
                    <td>
                        @foreach (var t in list)
                        {
                            string txt = t.ActionName + "(" + t.ActionType + ")";
                            <input type="checkbox">@txt <br />
                        }
                    </td>
                </tr>
                n++;
            }
        </tbody>
    </table>
    <hr />
    @foreach (var m in Model)
    {
        var list = m.controllerItem;
        int i = 1;
        <table class="table table-bordered table-striped">
            <caption style="color:red">ControlleName :@m.controlleName</caption>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Action</th>
                    <th>type</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var v in list)
                {
                    <tr>
                        <td>@i</td>
                        <td>@v.ActionName</td>
                        <td>@v.ActionType</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    }

</body>
</html>
